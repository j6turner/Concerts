<h1>Venues</h1>

<hr noshade>

<form action="venues" method="post">
  <input type="text" name="name" placeholder = "Frank's">
  <button type="submit" class="btn btn-success">Add Venue</button>
</form>

<br >

<ul>
  <% if @venues.any?() %>
  <% @venues.each do |venue| %>
  <li><a href="/venues/<%= venue.id() %>"><%= venue.name() %></a></li>
  <% end %>
</ul>
<% else %>
<p>The Venues log is empty.</p>
<% end %>

<br >
<hr noshade>
<br >

<h1><%= @band.name() %></h1>
<h3>Select the venues that apply to this band.</h3>

<hr noshade>

<% if @venues.any?() %>
  <form action="/bands/<%= @band.id() %>" method="post">
    <input type="hidden" name="_method" value="patch">
    <% @venues.each() do |venue| %>
      <div class="checkbox">
        <label>
          <input type="checkbox" name="ids[]" value="<%= @venue.id() %>"><%= venue.name() %>
        </label>
      </div>
    <% end %>
  </form>
<% end %>

<% if @band.venues().any?() %>
  <h3>The venues for this band are as follows:</h3>
  <ul>
    <% @band.venues().each do |venue| %>
      <li><%= venue.name() %></li>
    <% end %>
  </ul>
<% end %>

<hr noshade>

<a href="/">Return to Bands</a>
